#include <iostream>

using namespace std;

int main() {
    int n , i , suma = 0;
    cout << "Introduce un nÃºmero entero n para resolver la suma deseada: ";
    cin >> n;

    for (i = 1; i <= n; ++i) {
        if (i % 2 == 0) {
            suma -= i;
        }
        else {
            suma += i;
        }
    }

    cout << "el total es: " << suma;
    return 0;
}
