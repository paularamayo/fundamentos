#include <iostream>
#include <math.h>
using namespace std;

int main()
{
   int a,b,c;
   float s,A;
   cout<<"ingresar un lado del triangulo ";
   cin>>a;
   cout<<"ingresar un lado del triangulo ";
   cin>>b;
   cout<<"ingresar un lado del triangulo ";
   cin>>c;
   s=(a+b+c)/2.0;
   A=sqrt(s*(s-a)*(s-b)*(s-c));
   cout<<"El area del triangulo es "<<A;
   
    return 0;
}
